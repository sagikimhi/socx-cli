#!/usr/bin/env python3

import time
import random

from rich import get_console


console = get_console()


def main(min_: int = 1, max_: int = 10):
    if min_ > max_:
        min_, max_ = max_, min_
    duration = random.random() * (max_ - min_) + min_
    console.log("doing some work...")
    time.sleep(duration)
    console.log(f"work done ([white]{duration:.2f}s[/]).")


if __name__ == "__main__":
    main()
